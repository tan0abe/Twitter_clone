<div class="container">
<!--<%= link_to "つぶやいてみる", new_blog_path %>-->
  <p><%= notice %></p>
  <table class="table table-hover">
    <tr>
      <th>ついーと一覧</th>
    </tr>

  <% @blogs.each do |blog| %>
    <tr>
      <td class="active"></td>
      <td class="active"><%= blog.content %></td>
      <td class="success"><%= link_to "詳細を確認する", blog_path(blog.id) %></td>  <!--(blog.id)とすることでblogのidを取得している-->
      <td class="info"><%= link_to "ついーとを編集する", edit_blog_path(blog.id) %></td>
      <td class="danger"><%= link_to "ついーとを削除する", blog_path(blog.id), method: :delete, data: {confirm: "本気で削除していいですか？" }%></td>  <!--link_toはデフォルトではgetで送信するため、deleteメソッドでdestroyアクションを指定して送信している-->
    </tr>
  <% end %>
  </table>
</div>